<% if logged_in? %>
    <% if context == :settings %>
      <%= link_to 'Remove account', user_path(current_user.username), data: { turbo_method: :delete,
                                                                             turbo_confirm: "You are removing your account permanently. You won't be able to recover it. Are you sure?" } %>

    <% end %>
<% else %>
    <% if context == :login %>
      <%#= link_to "Sign up", signup_path %>
	  <%= link_to "Forgot your password?", '#' %><br />
    <% elsif context == :signup %>
      <!-- <%#= link_to "Login", login_path %><br /> -->
    <% end %>
    <%= link_to "Activate email", '#' %><br />
    <%= link_to "Unlock account", '#' %><br />
<% end %>