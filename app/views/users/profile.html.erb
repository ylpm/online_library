<% provide :title, current_user.full_name %>

<div class="row">
	<div class="col">
		<h1>Your profile</h1>
		<hr>
				
		<div class="row">
			<div class="col">
				<div class="row">
					<div class="col">
		  			<strong>Full name: </strong><%= current_user.full_name %>
					</div>
				</div>
				
				<div class="row">
					<div class="col">
			      <strong>Username: </strong><%= current_user.username %>
				  </div>
				</div>
				
				<% if current_user.gender? %>
				<div class="row">
					<div class="col">
			      <strong>Gender: </strong><%= current_user.gender %>
				  </div>
				</div>
				<% end %>
				
				<% if current_user.birthday %>
				<div class="row">
					<div class="col">
			      <strong>Birthday: </strong><%= current_user.birthday %>
				  </div>
				</div>
				<% end %>
		  </div>
			
			<div class="col">
				<% if current_user.email_addresses.any? %>
				<div class="row">
					<div class="col">
					<strong>Emails: </strong>
					<% current_user.email_addresses.each do |email_address| %>
					<br><%= email_address %> (<em><%= email_address.activated? ? "activated" : "not activated" %></em>)
					<% end %>
				  </div>
				</div>
				<% end %>
			</div>
		</div>
  </div>
	
	<div class="col">	
		<div class="row">
			<h2>Your posts</h2>
	  </div>
		
		<div class="row">
	  </div>
  </div>
</div>