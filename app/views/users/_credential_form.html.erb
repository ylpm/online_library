<%#= render 'shared/user_icon', css_class:"bi d-block mx-auto mb-4 rounded-circle" %>
<%= gravatar css_class: "bi d-block mx-auto mb-4" %>

<%= render 'shared/errors/error_message', error_message: @credentials_error_message, css_class: "alert alert-danger" %>

<%= form_with url: credential_me_path, scope: :credential do |auth_form| %>

  <%= auth_form.label "Confirm your password", class: "form-label"%>
	
  <%= auth_form.password_field :password, class: "form-control mb-3", autofocus: true, required: true %>
	
	<%= auth_form.submit "Authenticate", class: "btn btn-primary w-100" %>

<% end %>