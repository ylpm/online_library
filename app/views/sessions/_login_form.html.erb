<%= render 'shared/user_icon', css_class: "bi d-block mx-auto mb-4 rounded-circle" %>

<%= render 'shared/errors/error_message', error_message: @login_error_message, css_class: "alert alert-danger" %>

<%= form_with url: login_path , scope: :login do |session_form| %>

  <%= tag.div class: "d-flex flex-wrap" do %>
	
	  <%= tag.div class: "mb-3 w-100" do %>
		
		  <%= tag.div class: "form-group" do %>
		
			  <%= session_form.label :identifier, "Your identifier", class: "form-label" %>
			
			  <%= session_form.text_field :identifier, class: "form-control", placeholder: "username or email", value: @login_identifier, required: true %>
			<% end %>
			
		<% end %>

    <%= tag.div class: "mb-3 w-100" do %>
		
		  <%= tag.div class: "form-group" do %>
		
			  <%= session_form.label :password, class: "form-label" %>
			
			  <%= session_form.password_field :password, class: "form-control", required: true %>
				
			<% end %>
			
		<% end %>
	
	<% end %>

  <%= tag.div class: "checkbox mb-4" do %>

		<%= session_form.label :remember_me, class: "form-label" do %>
      <%= session_form.check_box :remember_me, class: "pixelart-checkbox", checked: @remember_me %>
		  Remember me
    <% end %>
	
	<% end %>

  <%= tag.div class: "actions center mb-5" do %>
	
	  <%= session_form.submit "Login", class: "btn btn-primary w-100" %>

	<% end %>
	
<% end %>